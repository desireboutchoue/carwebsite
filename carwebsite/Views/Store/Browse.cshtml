@using X.PagedList;
@using X.PagedList.Mvc;

@using X.PagedList.Mvc.Bootstrap4;
@model  X.PagedList.IPagedList<carwebsite.Models.Car>
@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Home/_HomeLayout.cshtml";
}

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Our Cars</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Online car rental system</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Car List Area Start ==-->


<h2 style="margin-top:30px;text-align:center;">@Model.First().CarTypes.Name</h2>
<p style="text-align:center">@Model.First().CarTypes.Cars.Count cars founds </p>

    <section id="car-list-area" class="section-padding">
        <div class="container">
            <div class="row">
                <!-- Car List Content Start -->
                <div class="col-lg-12">
                    <div class="car-list-content">
                        <div class="row">

                            @foreach (var car in Model)
                            {
                                <!-- Single Car Start -->
                                <div class="col-lg-6 col-md-6">
                                    <div class="single-car-wrap">
                                        <div class="car-list-thumb"><img src="@car.CarUrl" /></div>
                                        <div class="car-list-info without-bar">
                                            <a href="@Url.Action("DetailsCar","Store", new { id = car.CarId})">
                                                <h2 style="margin-top:20px;">@car.Name</h2>
                                                <h5>@car.Price$ Rent /per a day</h5>
                                            </a>
                                            <p>@car.Description</p>
                                            <ul class="car-info-list">
                                                <li>@car.Class</li>
                                                <li>@car.GearBox</li>
                                                <li>@car.Fuel</li>
                                            </ul>
                                            <p class="rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star unmark"></i>
                                            </p>
                                            @{ if (car.Type == "Available")
                                                {
                                                    @Html.ActionLink("Book it", "BookCar",
              "Home", new { id = car.CarId }, new { @class = "rent-btn" })
                                                }

                                                else
                                                {
                                                    <a href="#" class="rent-btn">Already rented</a>
                                                }

                                            }


                                        </div>
                                    </div>
                                </div>
                            }
