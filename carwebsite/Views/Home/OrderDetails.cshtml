@model IEnumerable<carwebsite.Models.BookingDetail>

@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Home/_HomeLayout.cshtml";
}

<h2>OrderDetails</h2>

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Bills</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Rental online car system</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>

<div class="contact-page-wrao section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <div class="contact-form">



                    <h3 class="text-success">Thanks ，Your reservation number is : @DateTime.Now.ToString("ddMMyyyyHHmm") @Model.FirstOrDefault().BookingId</h3>
                    <hr />

                    <h4>Bills</h4><br />
                    <dl class="dl-horizontal">

                        @foreach (var item in Model)
                        {

                            <span>@Html.DisplayFor(modelItem => item.Quantity)  @Html.DisplayFor(modelItem => item.Car.Name) </span> <br/>
                            <span> @((item.UnitPrice * item.Quantity).ToString()) $</span>



                        }





                    </dl>
                </div>


                <p>

                    @Html.ActionLink("Go back ", "Index")
                </p>

              

            </div>
        </div>
    </div>
</div>

