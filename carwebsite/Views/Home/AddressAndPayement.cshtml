@model carwebsite.Models.Booking

@{
    ViewBag.Title = "AddressAndPayement";
    Layout = "~/Views/Home/_HomeLayout.cshtml";
}

<h2>AddressAndPayement</h2>
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Address and Payement</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Rental online car system</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>

<div class="contact-page-wrao section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <div class="contact-form">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { Placeholder = "Your Name" } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6">
                                <div class="email-input">
                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { Placeholder="Last Name" } })
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                 
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="website-input">
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { Placeholder="Address" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6">
                                <div class="subject-input">
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { Placeholder="Phone Number" } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="message-input">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { Placeholder="Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-submit">
                            <button class="btn btn-default" type="submit">Confirm Booking</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div style="text-align:center; margin-bottom:30px; ">
    @Html.ActionLink("Cancel", "Index")
</div>
